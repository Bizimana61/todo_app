<% content_for :title, "Sign up" %>

<h1>Create an account</h1>

<%= form_with model: @user, url: users_path do |f| %>
  <% if @user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@user.errors.count, "error") %> prevented your account from being created:</h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :name %><br>
    <%= f.text_field :name, autocomplete: "name" %>
  </div>

  <div>
    <%= f.label :email %><br>
    <%= f.email_field :email, autocomplete: "email", required: true %>
  </div>

  <div>
    <%= f.label :password %><br>
    <%# client-side pattern hint: not a substitute for server validation %>
    <%= f.password_field :password, required: true,
          pattern: '(?=.{8,})(?=.*\d)(?=.*[A-Za-z])(?=.*[@#%$&*\^]).*',
          title: 'At least 8 chars, include a letter, a digit and one special char: @ # % $ & * ^' %>
  </div>

  <div>
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation, required: true %>
  </div>

  <div style="margin-top:1rem;">
    <%= f.submit "Sign up", class: 'btn' %>
  </div>
<% end %>