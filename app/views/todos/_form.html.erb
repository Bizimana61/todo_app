<%= form_with(model: todo) do |form| %>
  <% if todo.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(todo.errors.count, "error") %> prohibited this todo from being saved:</h2>
      <ul>
        <% todo.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description, required: true, aria: { describedby: "description-help" } %>
    <small id="description-help" class="muted">Brief description of the task</small>
  </div>

  <div style="margin-top:0.5rem;">
    <%= form.label :due_date, "Due date (optional)", style: "display:block" %>
    <%= form.datetime_local_field :due_date,
          value: (todo.due_date.present? ? todo.due_date.strftime("%Y-%m-%dT%H:%M") : nil),
          aria: { describedby: "due-date-help" } %>
    <small id="due-date-help" class="muted">Pick a date and time (optional). If no picker appears, enter YYYY-MM-DD HH:MM.</small>
  </div>

  <div style="margin-top:0.5rem;">
    <%= form.label :done %>
    <%= form.check_box :done %>
  </div>

  <div style="margin-top:1rem;">
    <%= form.submit %>
  </div>
<% end %>